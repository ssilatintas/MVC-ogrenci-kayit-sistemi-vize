@model mvc_ogrenci_kayit.Models.Entity.TBLOGRENCILER

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Yeni Öğrenci Kaydı</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.OgrAd, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*Html.EditorFor(model => model.OgrAd, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.TextBoxFor(model => model.OgrAd, new { @class = "form-control", PlaceHolder = "Öğrenci Ad Giriniz", Required = "" })
            @Html.ValidationMessageFor(model => model.OgrAd, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.OgrSoyad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*Html.EditorFor(model => model.OgrSoyad, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.TextBoxFor(model => model.OgrSoyad, new { @class = "form-control", PlaceHolder = "Öğrenci Soyad Giriniz", Required = "" })
            @Html.ValidationMessageFor(model => model.OgrSoyad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.OgrNo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*Html.EditorFor(model => model.OgrNo, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.TextBoxFor(model => model.OgrNo, new { @class = "form-control", PlaceHolder = "Öğrenci No Giriniz", Required = "" })
            @Html.ValidationMessageFor(model => model.OgrNo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.OgrBolum, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.OgrBolum, new { @class = "form-control", PlaceHolder = "Öğrenci Bölüm Giriniz", Required = "" })
            @Html.ValidationMessageFor(model => model.OgrBolum, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-info" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Öğrenci Listesine Git", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
