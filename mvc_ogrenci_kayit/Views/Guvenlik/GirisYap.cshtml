

@{ 
    Layout = null; 
   
    }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-size: cover;
            background-image: url('../../smyo.jpeg');
            background-position: top;
            background-repeat: no-repeat;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .navbar {
            display: none !important;
        }

        .login-form-wrapper {
            display: flex;
            justify-content: space-around;
            width: 100%;
            max-width: 1000px; /* Genişlik sınırlaması */
            margin-top: 150px;
        }

        .login-form {
            width: 45%; /* Eşit büyüklükte olması için yüzde değerleri ayarlandı */
            background: #fff;
            padding: 60px;
            border-radius: 10px;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            text-align: center;
            margin-bottom: 25px; /* İki form arasında boşluk bırakmak için */
        }

            .login-form h2 {
                margin-bottom: 20px;
                color: #000;
            }

        .form-control,
        .btn {
            min-height: 50px;
            border-radius: 5px;
        }

        .btn {
            font-size: 18px;
            font-weight: bold;
            background-color: #000;
            color: #fff;
            transition: background-color 0.3s ease;
            width: 100%;
        }

            .btn:hover {
                background-color: #555;
            }
    </style>
</head>
<body>
    <div class="login-form-wrapper">
        <div class="login-form">

            
            <h2>Personel Girişi</h2>
            @using (Html.BeginForm("GirisYap", "Guvenlik", FormMethod.Post))
            {
              <div class="form-group">
              <input type="text" class="form-control" name="kullaniciAdi" placeholder="Kullanıcı Adı" required="required">
              </div>
              <div class="form-group">
               <input type="password" class="form-control" name="sifre" placeholder="Şifre" required="required">
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-primary">GİRİŞ YAP</button>
              </div>
            }
        </div>
        <div class="login-form">

            <h2>Misafir Girişi</h2>
            @using (Html.BeginForm("GirisYap", "Guvenlik", FormMethod.Post))
            {
              <div class="form-group">
              <input type="text" class="form-control" name="kullaniciAdi" placeholder="Kullanıcı Adı" required="required">
              </div>
              <div class="form-group">
              <input type="password" class="form-control" name="sifre" placeholder="Şifre" required="required">
              </div>
             <div class="form-group">
                 <button type="submit" class="btn btn-primary">GİRİŞ YAP</button>
             </div>}
        </div>
    </div>
</body>
</html>